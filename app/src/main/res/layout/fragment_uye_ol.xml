<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Fragment.UyeOl">

    <TextView
        android:id="@+id/uyeol_baslik_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üye Ol"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#4A2C2A"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.03"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/uyeol_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/asset_profil"
        android:background="@drawable/image_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/uyeol_isim_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeol_baslik_textView" />

    <TextView
        android:id="@+id/uyeol_isim_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İsim"
        android:textSize="14sp"
        android:textColor="#5D4037"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/uyeol_isim_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/uyeol_isim_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        android:textSize="15sp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#4A2C2A"
        android:textColorHint="#A09E9E"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <TextView
        android:id="@+id/uyeol_soyisim_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soyisim"
        android:textSize="14sp"
        android:textColor="#5D4037"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/uyeol_soyisim_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeol_isim_editText" />

    <EditText
        android:id="@+id/uyeol_soyisim_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:textAlignment="center"
        android:textSize="15sp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#4A2C2A"
        android:textColorHint="#A09E9E"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeol_isim_editText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/uyeol_eposta_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E Posta Adresi"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#4A2C2A"
        android:textColorHint="#A09E9E"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeol_soyisim_editText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/uyeol_parola_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Parola"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#4A2C2A"
        android:textColorHint="#A09E9E"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeol_eposta_editText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/uyeol_parolatekrar_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Parola Tekrar"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="#4A2C2A"
        android:textColorHint="#A09E9E"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeol_parola_editText"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/uyeol_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üye Ol"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeol_parolatekrar_editText"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>